/* pages/search/search.wxss */
.searcher{
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  width: 100%;
  height: 90rpx;
  background: #ededed;
  font-size:30rpx;
}
.searcher image{
  position: absolute;
  left: 50rpx;
  top:35rpx
}
.search_left{
  width:76%;
  color: #333;
  background:#fff;
  padding:5rpx 0 5rpx 55rpx;
  margin-right:20rpx;
  border-radius:5px;
}
.history{
  background: #fff;
  font-size: 30rpx;
  color: #666;
  padding-top: 90rpx
}
.his_title{
  display: flex;
  justify-content: space-between;
  padding: 25rpx
}
.hisList{
  display: flex;
  flex-wrap: wrap;
  padding: 0 10rpx 20rpx 10rpx
}
.hiscontent{
  background: #eee;
  color: #666;
  padding: 5rpx 10rpx;
  margin: 10rpx 20rpx;
  border-radius: 3px
}
.test-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
  background: #fff
}

.car-list {
  flex-direction: row;
  display: flex;
  align-items: center
}
.car-info{
  flex-direction: column;
  display: flex;
  padding-left:20rpx;
  width: 70%
}
.car-info view:nth-child(1){
  font-size: 28rpx;
}
.car-info view:nth-child(2){
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 28rpx
}
.car-info view:nth-child(3){
  font-size: 24rpx;
  color: #FF5500
}
.car-info view:nth-child(4){
  font-size: 24rpx;
  color: #333
}
.car-info view:last-child{
  font-size: 24rpx;
  color: #666
}
.nolength{
  text-align: center;
  padding:10rpx;
  color: #666;
  font-size: 28rpx
}
.search-result{
  padding-top:90rpx;
  flex: auto;
}
.search-result scroll-view{  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  top: 90rpx;  
}